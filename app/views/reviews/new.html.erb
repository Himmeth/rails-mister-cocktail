<%= form_for [@cocktail, @review] do |f|%>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.number_field :content, class: "form-control" %>
  </div>

  <%= f.submit class: 'btn btn-warning' %>
<% end %>
